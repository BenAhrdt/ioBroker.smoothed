{
	"i18n": true,
	"type": "panel",
    "items":{
        "informationHeader": {
            "newLine": true,
            "type": "header",
            "text": "mainInformations",
            "size": 3
        },
        "Information1":{
            "newLine":true,
            "type": "staticText",
            "label": "mainInformationText"
        },
        "configurationHeader": {
            "newLine": true,
            "type": "header",
            "text": "configuration",
            "size": 3
        },
        "statesAccordion":{
            "type":"accordion",
            "titleAttr": "name",
            "sm":12,
            "items":[
                {
                    "type": "text",
                    "attr": "name",
                    "label": "name",
                    "tooltip": "nameTooltip",
                    "validator": "if(data.name === '' || data.name === null){return false;}else{const myRegEx = /^([0-9a-z_ ])*$/i; return myRegEx.test(data.name);}",
                    "validatorNoSaveOnError": true,
                    "default": "",
                    "sm":2
                },
                {
                    "type": "objectId",
                    "label": "id",
                    "attr": "id",
                    "tooltip": "idTooltip",
                    "validator": "if(data.id === '' || data.id === null){return false;}else{return true;}",
                    "validatorNoSaveOnError": true,
                    "default": "",
                    "sm":5
                },
                {
                    "attr": "refreshRate",
                    "type": "select",
                    "options": [
                        {"label":"valueChanged","value":0},
                        {"label":"everySecond","value":1},
                        {"label":"every2s","value":2},
                        {"label":"every3s","value":3},
                        {"label":"every4s","value":4},
                        {"label":"every5s","value":5},
                        {"label":"every6s","value":6},
                        {"label":"every10s","value":10},
                        {"label":"every12s","value":12},
                        {"label":"every15s","value":15},
                        {"label":"every20s","value":20},
                        {"label":"every30s","value":30},
                        {"label":"everyMinute","value":60}],
                    "default": 2,
                    "label": "refreshRate",
                    "tooltip": "refreshRateTooltip",
                    "sm": 2
                },
                {
                    "attr": "refreshWithStatechange",
                    "type": "checkbox",
                    "label": "refreshWithValuechange",
                    "tooltip": "resfreshWithValuechangeTooltip",
                    "hidden":"data.refreshRate === 0",
                    "default": false,
                    "sm":1
                  },
                {
                    "newLine": true,
                    "type": "select",
                    "attr": "type",
                    "options": [
                        {"label":"mvgavg","value":"mvgavg"},
                        {"label":"lowpassPt1","value":"PT1"}],
                    "default": "mvgavg",
                    "label": "calculationType",
                    "tooltip": "typeTooltip",
                    "sm": 3
                },
                {
                    "type": "select",
                    "attr":"smoothtime",
                    "options": [
                    {"label":"unsmoothed","value":0},
                    {"label":"1 s","value":1},
                    {"label":"2 s","value":2},
                    {"label":"3 s","value":3},
                    {"label":"4 s","value":4},
                    {"label":"5 s","value":5},
                    {"label":"6 s","value":6},
                    {"label":"7 s","value":7},
                    {"label":"8 s","value":8},
                    {"label":"9 s","value":9},
                    {"label":"10 s","value":10},
                    {"label":"20 s","value":20},
                    {"label":"30 s","value":30},
                    {"label":"1 min","value":60},
                    {"label":"2 min","value":120},
                    {"label":"3 min","value":180},
                    {"label":"4 min","value":240},
                    {"label":"5 min","value":300},
                    {"label":"6 min","value":360},
                    {"label":"7 min","value":420},
                    {"label":"8 min","value":480},
                    {"label":"9 min","value":540},
                    {"label":"10 min","value":600},
                    {"label":"11 min","value":660},
                    {"label":"12 min","value":720},
                    {"label":"13 min","value":780},
                    {"label":"14 min","value":840},
                    {"label":"15 min","value":900},
                    {"label":"30 min","value":1800},
                    {"label":"45 min","value":2700},
                    {"label":"60 min","value":3600}],
                    "default":30,
                    "label": "smoothtime",
                    "tooltip": "smoothtimeTooltip",
                    "sm":2
                },
                {   "attr": "separateSmoothtimeForNegativeDifference",
                    "type": "checkbox",
                    "label": "negativeSeparat",
                    "tooltip": "negativeSeparateTooltip",
                    "default": false,
                    "hidden": "data.type !== 'PT1'",
                    "sm":2
                },
                {
                    "type": "select",
                    "attr":"smoothtimeNegative",
                    "options": [
                    {"label":"unsmoothed","value":0},
                    {"label":"1 s","value":1},
                    {"label":"2 s","value":2},
                    {"label":"3 s","value":3},
                    {"label":"4 s","value":4},
                    {"label":"5 s","value":5},
                    {"label":"6 s","value":6},
                    {"label":"7 s","value":7},
                    {"label":"8 s","value":8},
                    {"label":"9 s","value":9},
                    {"label":"10 s","value":10},
                    {"label":"20 s","value":20},
                    {"label":"30 s","value":30},
                    {"label":"1 min","value":60},
                    {"label":"2 min","value":120},
                    {"label":"3 min","value":180},
                    {"label":"4 min","value":240},
                    {"label":"5 min","value":300},
                    {"label":"6 min","value":360},
                    {"label":"7 min","value":420},
                    {"label":"8 min","value":480},
                    {"label":"9 min","value":540},
                    {"label":"10 min","value":600},
                    {"label":"11 min","value":660},
                    {"label":"12 min","value":720},
                    {"label":"13 min","value":780},
                    {"label":"14 min","value":840},
                    {"label":"15 min","value":900},
                    {"label":"30 min","value":1800},
                    {"label":"45 min","value":2700},
                    {"label":"60 min","value":3600}],
                    "default":30,
                    "label": "smoothtimeNegative",
                    "tooltip": "smoothtimeNegativeTooltip",
                    "sm": 2,
                    "hidden": "data.type !== 'PT1' || data.separateSmoothtimeForNegativeDifference === false"
                },            
                {   "attr": "limitInNegativeDirection",
                    "type": "checkbox",
                    "newLine": true,
                    "label": "limitMinimum",
                    "tooltip": "limitMinimumTooltip",
                    "default": false,
                    "sm":3
                },
                { "attr": "negativeLimit",
                    "type": "number",
                    "label": "minimumValue",
                    "tooltip": "minimumValueTooltip",
                    "hidden":"data.limitInNegativeDirection != true",
                    "default":0,
                    "sm":3
                },
                { "attr": "limitInPositiveDirection",
                    "type": "checkbox",
                    "label": "limitMaximum",
                    "tooltip": "limitMaximumTooltip",
                    "hidden": "customObj.common.type !== 'number'",
                    "default": false,
                    "sm":3
                },
                { "attr": "positiveLimit",
                    "type": "number",
                    "label": "maximumValue",
                    "tooltip": "maximumValueTooltip",
                    "hidden":"data.limitInPositiveDirection != true || customObj.common.type !== 'number'",
                    "default":100,
                    "sm":3
                },
                { "attr": "limitDecimalplaces",
                    "type": "checkbox",
                    "newLine": true,
                    "label": "limitDecimalplaces",
                    "tooltip": "limitDecimalplacesTooltip",
                    "default": false,
                    "sm":3
                },
                {
                    "attr": "decimalplaces",
                    "type": "select",
                    "options": [
                    {"label":"0","value":1},
                    {"label":"1","value":10},
                    {"label":"2","value":100},
                    {"label":"3","value":1000},
                    {"label":"4","value":10000},
                    {"label":"5","value":100000},
                    {"label":"6","value":1000000},
                    {"label":"7","value":10000000},
                    {"label":"8","value":100000000}],
                    "default":1000,
                    "label": "decimalplaces",
                    "tooltip": "decimalplacesTooltip",
                    "hidden": "data.limitDecimalplaces != true",
                    "sm": 2
                },            
                {   "attr": "ignoreAboveStandardDeviation",
                    "type": "checkbox",
                    "label": "ignoreStandardDeviation",
                    "tooltip": "ignoreStandardDeviationTooltip",
                    "default": false,
                    "sm":3
                },
                { "attr": "standardDeviationLimit",
                    "type": "number",
                    "label": "standardDeviationLimit",
                    "tooltip": "standardDeviationLimitTooltip",
                    "hidden":"data.ignoreAboveStandardDeviation != true",
                    "default":1000,
                    "sm":3
                }
            ]
        }
	}
}